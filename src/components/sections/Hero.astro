---
import { basics } from "@/cv.json";
import Section from "@/components/Section.astro";
import Email from "@/icons/Email.astro";
import Github from "@/icons/Github.astro";
import Linkedin from "@/icons/Linkedin.astro";
import Whatsapp from "@/icons/Whatsapp.astro";
import Portfolio from "@/icons/Portfolio.astro";
import LinksCenter from "@/icons/Links.astro";
import WorldMap from "@/icons/WorldMap.astro";
import image1 from "@/img/linkedin_img2.jpg";

const { name, label, image, location, profiles, whatsapp, email, phone } =
	basics;
const { city, country } = location;

const SOCIAL_ICONS: Record<string, any> = {
	Github,
	Linkedin,
	Whatsapp,
	Portfolio,
	LinksCenter,
};
const LinkedInfo = profiles.find(({ network }) => network === "Linkedin");
const linkedUrl = LinkedInfo?.url;
const linkcenterInfo = profiles.find(
	({ network }) => network === "LinksCenter"
);
const linksUrl = linkcenterInfo?.url;

const printInfo = [email, phone, linkedUrl, linksUrl]
	.filter(Boolean)
	.join(" • ");
---

<Section>
	<div class="container">
		<div class="info">
			<h1>{name}</h1>
			<h2>{label}</h2>
			<span>
				<WorldMap />
				{city} - {country}
			</span>
			<footer class="print">
				{printInfo}
			</footer>
			<footer class="no-print">
				{
					email && (
						<a
							href={`mailto:${email}`}
							title={`Send an email to ${name} at ${email}`}
							target="_blank"
							rel="noopener noreferrer">
							<Email />
						</a>
					)
				}

				{
					whatsapp && (
						<a
							href={whatsapp}
							title={`Send a message to ${name} at ${whatsapp}`}
							target="_blank"
							rel="noopener noreferrer">
							<Whatsapp />
						</a>
					)
				}
				{
					profiles.map(({ network, url, username }) => {
						const Icon = SOCIAL_ICONS[network];

						return (
							<a
								href={url}
								title={`Visit ${name}'s profile on ${network}`}
								target="_blank"
								rel="noopener noreferrer">
								<Icon />
							</a>
						);
					})
				}
			</footer>
		</div>
		<a
			href="https://ezestom.github.io/portfolio/"
			target="_blank"
			class="anchor-img">
			<img class="img" src={image1.src} alt={`Image about ${name}`} />
			<span
				>Go to my Portfolio
				<svg width="115" height="1" xmlns="http://www.w3.org/2000/svg">
					<path
						d="M10 50 L150 50 L130 30 M150 50 L130 70"
						stroke="black"
						fill="transparent"
						stroke-width="2"
						class="animated-arrow"></path>
				</svg>
			</span>
		</a>
	</div>
</Section>

<style>
	.container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
	}
	.info {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		padding-right: 32px;
	}
	h1 {
		font-size: 2rem;
	}
	h2 {
		font-weight: 500;
		font-size: 1.1rem;
		text-wrap: balance;
	}
	.anchor-img {
		transition: all 0.3s ease;
		position: relative;
	}
	a span {
		position: absolute;
		border-radius: 0.5rem;
		transition: all 0.3s ease;
		z-index: -1;
		transform: translate(5%, -100%);
		display: flex;
		flex-direction: column;
		align-items: center;
		height: fit-content;
		width: fit-content;
		overflow: hidden;
		font-size: 0.75rem;
		padding: 0.5rem;
		background-color: #fff;
	}
	.animated-arrow {
		opacity: 0;
		transition: all 0.3s ease;
		transform: translateY(-3.1rem);
	}
	.anchor-img:hover {
		filter: drop-shadow(0 0 0.25rem rgba(0, 0, 0, 0.1));
		transform: scale(1.1) rotate(-3deg) translate(-3px, -3px);
		span {
			rotate: 6deg;
			transform: translate(0%, 10%) rotate(6deg);
		}
		.animated-arrow {
			stroke-dasharray: 400; /* La longitud total del trazo */
			stroke-dashoffset: 400; /* El trazo está oculto */
			animation: draw 1s forwards ease-in-out;
			opacity: 1;
		}
	}

	.anchor-img:active {
		transform: scale(0.95);
	}
	img {
		aspect-ratio: 1/1;
		object-fit: cover;
		width: 150px;
		border-radius: 0.5rem;
	}
	span {
		display: flex;
		align-items: center;
		gap: 0.25rem;
		font-size: 0.85rem;
		letter-spacing: -0.05;
	}
	footer {
		color: #555;
		font-size: 0.75rem;
		display: flex;
		gap: 4px;
		margin-top: 8px;
	}
	footer a {
		color: #777;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border: 1px solid #eee;
		padding: 4px;
		height: 32px;
		width: 32px;
		border-radius: 6px;
		transition: all.3s ease;
	}
	footer a:hover {
		color: #333;
		background-color: #eee;
		border-color: #ddd;
	}
	.print {
		display: none;
	}
	@media print {
		.print {
			display: block;
		}
		.no-print {
			display: none;
		}
	}
	@media (width< 700px) {
		h1 {
			font-size: 1.5rem;
		}
		h2 {
			font-size: 1rem;
		}
		.container {
			gap: 0;
			align-items: start;
		}
		.info {
			padding: 0;
		}
	}

	@keyframes draw {
		to {
			stroke-dashoffset: 0; /* El trazo se "dibuja" */
		}
	}
</style>
