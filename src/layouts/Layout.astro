---
interface Props {
	title: string;
}
import "@fontsource-variable/onest";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Open Graph Protocol -->
		<meta property="og:title" content="Ezequiel Federico Stom Resume" />
		<meta
			property="og:description"
			content="Hello! I'm Ezequiel, and this is my resume. Explore my professional journey, skills, and accomplishments. Thank you for taking the time to learn more about me! ðŸ‘‹"
		/>
		<meta property="og:type" content="Cv" />
		<meta property="og:url" content="https://ezestom-resume.vercel.app/" />
		<meta property="og:image" content="../img/qr-links-center.png" />
		<link rel="icon" type="image/png" href="./img/resume.svg" />
		<meta name="theme-color" content="#fafafa" />

		<!-- OGP -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/cv.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		letter-spacing: 0.025rem;
	}

	body,
	figure {
		margin: 0;
		padding: 0;

		font-family: "Onest Variable", sans-serif;
	}
	a {
		text-decoration: none;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	h1,
	h2,
	h3,
	h4 {
		margin: 0;
	}
	h1,
	h2 {
		color: #222;
	}
	h3 {
		color: #333;
	}
	h4 {
		color: #444;
	}
	article a {
		color: #333;
	}

	p {
		color: #666;
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
	}
	/* dark mode */
	.dark body {
		background-color: #000;
	}
	.dark h1,
	.dark h2,
	.dark h3,
	.dark h4 {
		color: #ededed;
	}

	.dark a,
	.dark p {
		color: #a1a1a1;
	}
</style>
