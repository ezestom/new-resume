---
interface Props {
	title: string;
}
import "@fontsource-variable/onest";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Open Graph Protocol -->
		<meta property="og:title" content="Ezequiel Federico Stom Resume" />
		<meta
			property="og:description"
			content="Hello! I'm Ezequiel, and this is my resume. Explore my professional journey, skills, and accomplishments. Thank you for taking the time to learn more about me! üëã"
		/>
		<meta property="og:type" content="Cv" />
		<meta property="og:url" content="https://ezestom-resume.vercel.app/" />
		<meta property="og:image" content="../img/qr-links-center.png" />
		<link rel="icon" type="image/png" href="./img/resume.svg" />
		<meta name="theme-color" content="#fafafa" />

		<!-- OGP -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/cv.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		letter-spacing: 0.025rem;
	}

	body,
	figure {
		margin: 0;
		padding: 0;
		font-family: "Onest Variable", sans-serif;
	}
	a {
		text-decoration: none;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	h1,
	h2,
	h3,
	h4 {
		margin: 0;
	}
	h1,
	h3,
	h2 {
		color: #333;
	}
	h4 {
		color: #444;
	}
	article a {
		color: #333;
	}

	p,
	span,
	time {
		color: #666;
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
	}
	/* dark mode */
	.dark body {
		background-color: #212830;
	}
	.dark h1,
	.dark h2,
	.dark h3,
	.dark h4,
	.dark span,
	.dark time {
		color: #f0f0f0;
	}

	.dark a,
	.dark p {
		color: #f9f9f9;
	}

	img {
		/* que se muestre una vez la animaci√≥n */
		animation: custom-animation 2s 1;
		position: relative; /* Necesario para mover los elementos con left y top */
		rotate: -3deg;
	}

	@keyframes custom-animation {
		19.8% {
			left: 0;
			top: 0;
		}
		20% {
			left: 5%;
			top: -5%;
		}
		20.2% {
			left: 0;
			top: 0;
		}
		37% {
			top: 0;
			filter: brightness(1);
		}
		41% {
			top: 1%;
			filter: brightness(1.08) blur(3px);
			rotate: 2deg;
		}
		45% {
			left: 0;
			top: 0;
			filter: brightness(1);
			scale: 1.1;
		}
		70% {
			filter: brightness(1) blur(0);
		}
		85% {
			filter: brightness(1.08) blur(2px);
			rotate: -2.5deg;
		}
		94.5% {
			left: 0;
			top: 0;
		}
		95% {
			left: 1%;
			top: 1%;
			rotate: -1.25deg;
		}
		95.5% {
			left: 0;
			top: 0;
		}
		100% {
			filter: brightness(1) blur(0);
			scale: 1;
			rotate: -2deg;
		}
	}
</style>
